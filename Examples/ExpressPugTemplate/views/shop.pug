extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.name_of_product}
                        div.card__image
                            img(src="https://i.ebayimg.com/images/g/SnAAAOSwJTpkuNCA/s-l960.jpg",alt="Alt book")
                        div.card__content
                            h2.product__price $24.33
                            p.product__description A great book!
                        .card__actions
                            button.btn Add to cart
        else 
            h1 no products